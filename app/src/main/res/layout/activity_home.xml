<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/coll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dogcat"
                    app:layout_collapseMode="parallax" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="#fff"
                        android:textSize="22sp" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_main" />
    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="35sp"
        android:background="@drawable/button_corner_red"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="160dp"
        android:visibility="invisible"
        android:text="Add Pets"
        android:textColor="#fff"
        android:textSize="18sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabthemchungloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#ed0004"
        android:src="@drawable/ic_add_box_black_24dp"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="35sp"
        android:background="@drawable/buttonkeyboad_conner"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="90dp"
        android:visibility="invisible"
        android:text="Add Type"
        android:textColor="#fff"
        android:textSize="18sp" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabthemloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#ff00a69c"
        android:src="@drawable/ic_class_black_24dp"
        android:visibility="invisible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:onClick="addtype"
        android:src="@drawable/ic_add_black_24dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="#fff"
        app:itemTextColor="#FFF"
        app:menu="@menu/navi"></android.support.design.widget.BottomNavigationView>
</RelativeLayout><!--<android.support.v4.widget.NestedScrollView--><!--app:layout_behavior="@string/appbar_scrolling_view_behavior"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content">--><!--<android.support.v7.widget.RecyclerView--><!--android:id="@+id/recycler_view"--><!--android:layout_width="match_parent"--><!--android:layout_height="match_parent" />--><!--</android.support.v4.widget.NestedScrollView>-->